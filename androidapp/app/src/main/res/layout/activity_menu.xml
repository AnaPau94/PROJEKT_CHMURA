<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="booksmanagement.androidapp.activity.MenuActivity">

    <Button
        android:id="@+id/button_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:onClick="openAddBookActivity"
        android:text="Add book"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_show_books_to_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:onClick="showBooksToBuy"
        android:text="Show books"
        app:layout_constraintTop_toBottomOf="@+id/button_add_book"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_menu_buy_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="showBuyBookMenu"
        android:text="Buy book"
        app:layout_constraintTop_toBottomOf="@+id/button_show_books_to_buy"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_shop_choosing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="openShopChooseActivity"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="148dp" />
</android.support.constraint.ConstraintLayout>
